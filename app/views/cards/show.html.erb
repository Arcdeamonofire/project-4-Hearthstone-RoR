<!-- <%=@card[0]%> -->
<div class="row">


  <div class="one-half column">
    <img src="<%=@card[0]["img"]%>" alt="<%=@card[0]["name"]%>" title="<%=@card[0]["flavor"]%>"/>
  </div>
  <div class="one-half column">
    <h2><%=@card[0]["name"]%></h2>
    <p>Type:<%=@card[0]["type"]%></p>
    <%if @card[0]["cost"]%>
      <p>Cost:<%=@card[0]["cost"]%></p>
    <%end%>
    <%if @card[0]["attack"]%>
      <p>Attack:<%=@card[0]["attack"]%></p>
    <%end%>
    <%if @card[0]["heath"] %>
      <p>Health:<%=@card[0]["text"]%></p>
    <%end%>
    <%if @card[0]["durability"]%>
      <p>Durability:<%=@card[0]["durability"]%></p>
    <%end%>
  <!-- <p> <%=@card[0]["text"]%></p> -->
  <!-- <p>Class: <%=@card[0]["playerClass"]%></p> -->
    <% if @isUser %>
      <%= link_to "Add Card to Deck", new_card_path(:card_name => @card[0]["name"]) %>
    <%end%>
  </div>
</div>
<h3 id="return"><a href="/search/<%=@card[0]["playerClass"]%>">Back to <%=@card[0]["playerClass"]%> Cards</a></h3>
